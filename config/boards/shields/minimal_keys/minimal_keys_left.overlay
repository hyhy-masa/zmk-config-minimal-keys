#include "minimal_keys.dtsi"

/ {
    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN";
        diode-direction = "col2row";
        
        // XIAOの実際のピン配置に基づくGPIO設定
        row-gpios = <&gpio0 2 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,   // D0
                    <&gpio0 3 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,   // D1
                    <&gpio0 28 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,  // D2
                    <&gpio0 29 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>;  // D3

        col-gpios = <&gpio0 4 GPIO_ACTIVE_HIGH>,   // D4
                    <&gpio0 5 GPIO_ACTIVE_HIGH>,   // D5
                    <&gpio1 11 GPIO_ACTIVE_HIGH>,  // D6
                    <&gpio1 12 GPIO_ACTIVE_HIGH>,  // D7
                    <&gpio0 10 GPIO_ACTIVE_HIGH>,  // D8
                    <&gpio0 9 GPIO_ACTIVE_HIGH>;   // D9
    };

    // ロータリーエンコーダー設定
    encoder: encoder {
        compatible = "alps,ec11";
        label = "ENCODER";
        a-gpios = <&gpio0 8 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;  // D10
        b-gpios = <&gpio0 9 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;  // D9 (実際の配線に合わせて調整)
        resolution = <4>;
    };

    sensors {
        compatible = "zmk,keymap-sensors";
        sensors = <&encoder>;
    };

    // バッテリー設定
    chosen {
        zmk,battery = &vbatt;
    };
};